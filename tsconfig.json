{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "types": [],
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "node"]
}
